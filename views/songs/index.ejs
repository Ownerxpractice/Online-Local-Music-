<!DOCTYPE html>
<html>
<head>
  <title>All Songs</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <%- include('../partials/navbar'); %>

  <main class="container">
    <h1>All Songs</h1>

    <!-- City search form -->
    <form action="/songs" method="get" class="city-search">
      <label>Search by City:</label>
      <input
        type="text"
        name="city"
        value="<%= selectedCity || '' %>"
        placeholder="Enter city (e.g., Flagstaff)"
      >
      <button type="submit">Search</button>
    </form>

    <br>

    <a href="/songs/new">Upload New Song</a>

    <table class="songs-table">
      <thead>
        <tr>
          <th>Title</th>
          <th>City</th>
          <th>Avg Rating</th>
          <th>Player</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
      <% songs.forEach(song => { %>
        <tr>
          <td><a href="/songs/<%= song.id %>"><%= song.title %></a></td>
          <td><%= song.city %></td>
          <td><%= song.avg_rating %></td>
          <td>
            <button class="play-btn"
                    data-src="<%= song.file_path %>"
                    data-title="<%= song.title %>">
              Play
            </button>
            <a href="<%= song.file_path %>" download>Download</a>
          </td>
          <td>
            <form action="/songs/<%= song.id %>/edit" method="get" style="display:inline;">
              <button type="submit">Edit</button>
            </form>

            <form action="/songs/<%= song.id %>/delete" method="post" style="display:inline;">
              <button type="submit">Delete</button>
            </form>

            <form action="/songs/<%= song.id %>/rate" method="post" style="display:inline;">
              <select name="rating">
                <option value="1">1★</option>
                <option value="2">2★</option>
                <option value="3" selected>3★</option>
                <option value="4">4★</option>
                <option value="5">5★</option>
              </select>
              <button type="submit">Rate</button>
            </form>

            <% if (user && playlists && playlists.length > 0) { %>
              <form action="/playlists/add-song" method="post" style="display:inline;">
                <input type="hidden" name="song_id" value="<%= song.id %>">
                <select name="playlist_id">
                  <% playlists.forEach(pl => { %>
                    <option value="<%= pl.id %>"><%= pl.name %></option>
                  <% }); %>
                </select>
                <button type="submit">Add to Playlist</button>
              </form>
            <% } %>
          </td>
        </tr>
      <% }); %>
      </tbody>
    </table>

    <section id="player-section">
      <h2 id="current-track-title">No track selected</h2>
      <audio id="audio-player" controls></audio>
    </section>
  </main>

  <script src="/js/player.js"></script>
</body>
</html>
